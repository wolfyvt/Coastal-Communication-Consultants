<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<html>
<head>
  <title>Coastal Communication Consultants</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>

<script type="text/javascript">

  var _gaq = _gaq || [];
  _gaq.push(['_setAccount', 'UA-30422721-1']);
  _gaq.push(['_trackPageview']);

  (function() {
    var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
    ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
    var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
  })();

</script>
</head>
<body>

<div class="container">
  <center><%= image_tag("ccc-logo-extended.png") %></center>
 
  <div class="ccc-sub-title">
      <h1>Speech Language Therapy in Charleston, SC</h1>
  </div>
</div>

<div class="container ccc-nav-pad">
  <div class="navbar">
      <div class="navbar-inner ccc-nav">
        <div class="container">
          <a class="brand" href="/" ><%= image_tag("CCC-brand.png") %></a>
          
          <ul class="nav">
              <li class="active ccc-nav-active">
                <%= link_to "Home", root_path %>
              </li>
              <li><%= link_to "Services", services_path %></li>
              <li><%= link_to "About the Practice", about_path %></li>
              <li><a href="#">Resources</a></li>
              <li><%= link_to "FAQ", frequently_asked_path %></li>
              <li><a href="#">Contact</a></li>
            </ul>
        </div>
      </div>
  </div>  
 

  <%= yield %>
</div>

</body>

<footer>
  <div class="container">
    Copyright &copy; <%= Time.now.year %> Coastal Communication Consultants.  
  </div>
</footer>
</html>
