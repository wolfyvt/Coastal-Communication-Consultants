<% content_for :head do %>
  <title>Parent Resources</title>
  <meta name="description" content="Resources for parents looking for more information on speech and language therapy.">
<% end %>

<div class="row">
  <div class="span12">
    <div class="well">
      <div class="page-header"><h1>Parent Resources</h1></div>
      <% @resource_list = Resource.order(:order_index) %>
      <% @resource_list.each do |resource| %>
        <h3><%= resource.title %></h3>
        <p class="ccc-p"><%= resource.description %></p>
        <p class="ccc-p"><%= resource.phone %></p>
        <%= link_to resource.website, resource.website, :target => "_blank" %>
        <br>
        <br>
      <% end %>        
      
    </div>
  </div>
</div>
